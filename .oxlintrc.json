{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "typescript", "unicorn", "oxc", "nextjs", "react"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "public/**",
    "test-results/**",
    "playwright-report/**",
    "blob-report/**",
    "playwright/.cache/**",
    "src/app/(payload)/**",
    "src/migrations/**"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "next/link",
            "message": "Please import from `@/i18n/routing` instead."
          },
          {
            "name": "next/navigation",
            "importNames": ["redirect", "permanentRedirect", "useRouter", "usePathname"],
            "message": "Please import from `@/i18n/routing` instead."
          }
        ]
      }
    ]
  }
}
