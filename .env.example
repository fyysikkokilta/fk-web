# =============================================================================
# FK-WEB ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database_name
DATABASE_URI=postgres://postgres:<password>@127.0.0.1:5432/your-database-name

# =============================================================================
# PAYLOAD CMS CONFIGURATION
# =============================================================================
# Secret key for authentication and encryption (generate a strong random string)
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Public server URL (used for links, previews, admin panel access)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Allow OAuth users who don't exist in database to auto-register (true/false)
ALLOW_NON_EXISTING_USERS=false

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# Sender information
EMAIL_FROM_NAME=Your Name
EMAIL_FROM_ADDRESS=your-email@gmail.com

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Default recipient for form submissions
FORM_BUILDER_DEFAULT_TO_EMAIL=your-email@gmail.com

# =============================================================================
# CLOUD STORAGE (S3 COMPATIBLE)
# =============================================================================
# S3 bucket configuration
S3_BUCKET=your-s3-bucket-name
S3_ACCESS_KEY_ID=your-s3-access-key-id
S3_SECRET=your-s3-secret
S3_ENDPOINT=your-s3-endpoint

# Public URL for accessing stored files
NEXT_PUBLIC_S3_PUBLIC_URL=your-s3-public-url

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# OAuth authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google APIs (Calendar, etc.)
GOOGLE_API_KEY=your-google-api-key

# Search Console verification
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code

# =============================================================================
# JOB QUEUE
# =============================================================================
JOB_QUEUE_SECRET=your-job-queue-secret
